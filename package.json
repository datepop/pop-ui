{
  "name": "root",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/datepop/pop-ui"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "start": "storybook dev",
    "start:core": "lerna run --scope @pop-ui/core storybook --stream",
    "build:foundation": "lerna run --scope @pop-ui/foundation build --stream",
    "build:core": "lerna run --scope @pop-ui/core build --stream",
    "test:core": "lerna run --scope @pop-ui/core test --stream",
    "build": "yarn build:foundation && lerna run build --stream",
    "test": "NODE_ENV=test jest --coverage",
    "build-storybook": "storybook build",
    "token-transform": "cd packages/foundation && yarn token-transform",
    "token-build": "cd packages/foundation && yarn token-build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint \"packages/**/*.scss\"",
    "lint:style:fix": "stylelint \"packages/**/*.scss\" --fix"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@storybook/addon-links": "^10.0.1",
    "@storybook/addon-themes": "^10.0.1",
    "@storybook/react": "^10.0.1",
    "@storybook/react-vite": "^10.0.1",
    "@storybook/testing-library": "^0.2.2",
    "@types/react": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "chromatic": "^13.3.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lerna": "^9.0.0",
    "postcss-scss": "^4.0.9",
    "react": "^19.2.0",
    "storybook": "^10.0.1",
    "style-dictionary": "^5.1.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "token-transformer": "^0.0.33",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4"
  },
  "packageManager": "yarn@4.10.3",
  "resolutions": {
    "tar": "^6.2.1",
    "tmp": "^0.2.4"
  }
}
