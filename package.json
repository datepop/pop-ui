{
  "name": "root",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/datepop/pop-ui"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "start": "storybook dev",
    "start:core": "lerna run --scope @datepop/core storybook --stream",
    "build:core": "lerna run --scope @datepop/core build --stream",
    "test:core": "lerna run --scope @datepop/core test --stream",
    "build": "lerna run build --stream",
    "test": "NODE_ENV=test jest --coverage",
    "build-storybook": "storybook build",
    "token-transformed": "token-transformer token.json transformed-token.json --expandTypography --expandShadow --expandCompotision --expandBorder",
    "token-build": "style-dictionary build"
  },
  "devDependencies": {
    "@storybook/components": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^8.6.12",
    "@types/react": "^18.3.20",
    "@vitejs/plugin-react": "^4.3.4",
    "css-loader": "^7.1.2",
    "eslint-plugin-storybook": "^0.12.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.2.1",
    "sass-loader": "^14.2.1",
    "storybook-addon-mock": "^5.0.0",
    "style-dictionary": "^3.9.2",
    "style-loader": "^3.3.4",
    "token-transformer": "^0.0.33",
    "vite": "^6.2.5",
    "webpack": "^5.99.1"
  },
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "@storybook/addon-actions": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/addons": "^7.6.17",
    "@storybook/blocks": "^8.6.12",
    "chromatic": "^11.28.0",
    "react": "^18.3.1",
    "storybook": "^8.6.12"
  }
}
