    "test": "NODE_ENV=test jest --coverage",
    "build-storybook": "lerna run build-storybook --stream"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "lerna": "^7.1.5",
    "webpack": "^5.88.2"
  },
  "packageManager": "yarn@4.0.1",
