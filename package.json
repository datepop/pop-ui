{
  "name": "root",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/datepop/pop-ui"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "start": "storybook dev",
    "start:core": "lerna run --scope @datepop/core storybook --stream",
    "build:core": "lerna run --scope @datepop/core build --stream",
    "test:core": "lerna run --scope @datepop/core test --stream",
    "build": "lerna run build --stream",
    "test": "NODE_ENV=test jest --coverage",
    "build-storybook": "storybook build",
    "token-transformed": "token-transformer token.json transformed-token.json --expandTypography --expandShadow --expandCompotision --expandBorder",
    "token-build": "style-dictionary build"
  },
  "devDependencies": {
    "@storybook/components": "^8.0.2",
    "@storybook/manager-api": "^8.0.2",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^8.0.2",
    "@storybook/react-vite": "^8.0.2",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^8.0.2",
    "@types/react": "^18.2.67",
    "@vitejs/plugin-react": "^4.2.1",
    "css-loader": "^6.10.0",
    "eslint-plugin-storybook": "^0.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.1.2",
    "sass-loader": "^14.1.1",
    "storybook-addon-mock": "^4.3.0",
    "style-dictionary": "^3.9.2",
    "style-loader": "^3.3.4",
    "token-transformer": "^0.0.33",
    "vite": "^5.1.6",
    "webpack": "^5.90.3"
  },
  "packageManager": "yarn@4.0.1",
  "dependencies": {
    "@storybook/addon-actions": "^8.0.2",
    "@storybook/addon-essentials": "^8.0.2",
    "@storybook/addon-interactions": "^8.0.2",
    "@storybook/addon-links": "^8.0.2",
    "@storybook/addon-themes": "^8.0.2",
    "@storybook/addons": "^7.6.17",
    "@storybook/blocks": "^8.0.2",
    "chromatic": "^11.1.1",
    "react": "^18.2.0",
    "storybook": "^8.0.2"
  }
}
