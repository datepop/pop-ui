{
  "name": "root",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/datepop/pop-ui"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "start": "storybook dev",
    "start:core": "lerna run --scope @pop-ui/core storybook --stream",
    "build:core": "lerna run --scope @pop-ui/core build --stream",
    "test:core": "lerna run --scope @pop-ui/core test --stream",
    "build": "lerna run build --stream",
    "test": "NODE_ENV=test jest --coverage",
    "build-storybook": "storybook build",
    "token-transformed": "token-transformer token.json transformed-token.json --expandTypography --expandShadow --expandCompotision --expandBorder",
    "token-build": "style-dictionary build"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^9.1.15",
    "@storybook/react-vite": "^9.1.15",
    "@storybook/testing-library": "^0.2.2",
    "@types/react": "^18.3.26",
    "@vitejs/plugin-react": "^5.1.0",
    "css-loader": "^7.1.2",
    "eslint-plugin-storybook": "^9.1.15",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lerna": "^9.0.0",
    "sass-loader": "^16.0.6",
    "style-dictionary": "^5.1.1",
    "style-loader": "^4.0.0",
    "token-transformer": "^0.0.33",
    "vite": "^7.1.12",
    "webpack": "^5.99.1"
  },
  "packageManager": "yarn@4.10.3",
  "dependencies": {
    "@storybook/addon-links": "^9.1.15",
    "@storybook/addon-themes": "^9.1.15",
    "chromatic": "^13.3.2",
    "react": "^18.3.1",
    "storybook": "^9.1.15"
  }
}
