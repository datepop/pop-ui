{
  "source": ["./transformed-token.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./packages/core/src/components/shared/",
      "files": [
        {
          "destination": "variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "ts": {
      "transformGroup": "js",
      "buildPath": "./packages/core/src/tokens/",
      "files": [
        {
          "destination": "colors.ts",
          "format": "javascript/es6",
          "filter": {
            "type": "color"
          }
        }
      ]
    }
  }
}
